root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,txt}]
trim_trailing_whitespace = false

[*.{js,css,scss}]
charset = utf-8
indent_style = space
indent_size = 2

[*.php]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
